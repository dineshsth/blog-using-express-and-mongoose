            {{/ each}}
         </div>
      </div>
      <div class="widget widget_popular">
         <h3>Popular Post.</h3>
         <ul class="link-list">
           {{# each items}}
            <li><a href="/blog:{{this._id}}">{{this.heading}}.</a></li>
            {{/each}}
         </ul>

